{
  "name": "jsonschema-decorator",
  "version": "1.0.5",
  "description": "jsonschema decorator",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/cross-env NODE_ENV=travis jest --forceExit",
    "lint": "standard **/*.js *.js --fix",
    "example": "./node_modules/.bin/cross-env NODE_ENV=travis ./node_modules/.bin/babel-node ./test/server.js",
    "cov": "./node_modules/.bin/cross-env NODE_ENV=travis npm run test -- --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xtx1130/jsonschema-decorator.git"
  },
  "keywords": [
    "jsonschema",
    "decorator"
  ],
  "author": "xtx1130@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xtx1130/jsonschema-decorator/issues"
  },
  "homepage": "https://github.com/xtx1130/jsonschema-decorator#readme",
  "dependencies": {
    "jsonschema": "^1.2.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-eslint": "^9.0.0",
    "standard": "^12.0.1",
    "koa": "^2.3.0",
    "koa-router": "^7.2.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "istanbul": "^0.4.5",
    "jest": "^21.2.1",
    "jsonp-body": "^1.0.0"
  },
  "jest": {
    "testMatch": [
      "**/test/server.js"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "!**/test/**",
      "**/*.js",
      "!**/coverage/**"
    ]
  },
  "standard": {
    "globals": [ "v", "describe", "it", "expect", "test" ],
    "parser": "babel-eslint",
    "ignore": [
      "./converage/*",
      "LICENSE",
      "note",
      "readme.md",
      "package.json",
      "package-lock.json",
      "*.yml",
      "./node_modules/*"
    ]
  }
}
